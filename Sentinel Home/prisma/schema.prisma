generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Alert {
  id        String   @id @default(uuid())
  sensorId  String
  type      String
  timestamp DateTime @default(now())
  hostname  String
  payload   Json?
  metadata  Json?
}

model Sensor {
  id        String   @id
  hostname  String   @unique
  lastSeen  DateTime
  status    String
  version   String
  ipAddress String?
}

model Policy {
  id          String   @id
  name        String
  category    String
  pattern     String
  action      String
  description String
  updatedAt   DateTime @default(now())
}

model SystemLog {
  type      String
  component String
  message   String
  timestamp DateTime @default(now())
  id        Int      @id @default(autoincrement())
}

model SystemConfig {
  key   String @id
  value String
}

model Command {
  id       String   @id @default(uuid())
  sensorId String
  type     String
  payload  String?
  queuedAt DateTime @default(now())
}

model AuditLog {
  id             String   @id @default(uuid())
  timestamp      DateTime @default(now())
  actorId        String
  actorName      String
  action         String
  targetResource String
  details        Json?
  severity       String   @default("INFO")
  hash           String?
}

model Application {
  id       String   @id @default(uuid())
  name     String
  vendor   String
  instance String
  type     String
  users    Int      @default(0)
  cci      Int      @default(0)
  certs    String[]
  lastScan DateTime @default(now())
  risk     String?
}

model ApplicationMetric {
  id                Int      @id @default(autoincrement())
  timestamp         DateTime @default(now())
  sanctionedCount   Int
  unsanctionedCount Int
  avgCCI            Int
}

model GatewayConnector {
  id        String   @id
  name      String
  status    String
  type      String
  icon      String
  color     String
  ipAddress String?
  region    String?
  updatedAt DateTime @updatedAt
}
