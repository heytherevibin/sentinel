generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Alert {
  id        String   @id @default(uuid())
  sensorId  String
  type      String
  timestamp DateTime @default(now())
  hostname  String
  payload   Json?
  metadata  Json?
}

model Sensor {
  id        String   @id
  hostname  String   @unique
  lastSeen  DateTime
  status    String
  version   String
}

model Policy {
  id          String @id
  category    String
  name        String
  pattern     String
  action      String
  description String
}

model SystemLog {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  type      String
  component String
  message   String
}

model Command {
  id        String   @id @default(uuid())
  sensorId  String
  type      String
  payload   String?
  queuedAt  DateTime @default(now())
}
